    <div class="container">
        <div id="editProfileContainer" class="row">
            <button id="editProfileBtn" class="btn btn-primary" data-target="#editProfileModal" data-toggle="modal">Edit
                Profile</button>
        </div>
    </div>

    <!-- Modal for Edit Profile -->
    <div class="modal fade" id="editProfileModal" tabindex="-1" role="dialog" aria-labelledby="editProfileModalTitle"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editProfileModalTitle">Edit Profile here:</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form method="PUT" action="/">
                        <label for="usernameInput">Change Username: </label>
                        <input class="form-control mr-sm-2" placeholder="Enter here...">
                        <br>
                        <label for="emailInput">Change Email: </label>
                        <input class="form-control mr-sm-2" placeholder="Enter here...">
                        <br>
                        <label for="profilePicInput">Change Profile Pic:: </label>
                        <input class="form-control mr-sm-2" type="file" placeholder="Enter here...">
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

