<main class="form-signin w-100 m-auto">
  <form id="login-form" method="POST" action="/login">
  <h2 class="h3 mb-3 fw-normal">Please check your email for OTP</h2>
    <img
      class="mb-4"
      src="../../public/images/YASMPFullLogo.png"
      alt=""
      width="72"
      height="57"
    />
      <div class="form-floating">
        <label for="OTPInput">Enter OTP</label>
        <input class="form-control" name="OTPInput" id="OTPInput" />
      </div>
    {{#if error}}
      <div class="error-div">
        {{error}}
      </div>
    {{/if}}
    <button class="w-100 btn btn-lg btn-primary" type="submit">Submit</button>
  </form>
</main>